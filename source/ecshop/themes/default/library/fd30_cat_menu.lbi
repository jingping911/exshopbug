.fd30_cat ul li a:hover{ color:#a21a20}
.fd30_cat ul li.cat_lv1 h4 a{ text-indent:38px; line-height:40px;  background-image:URL(../images/classmenu.gif); background-repeat:no-repeat; font-size:16px}
.fd30_cat ul li .cat_p{ display:none; position:absolute; z-index:1;left:218px; width:576px;  top:0px;  margin:0px; padding:0px 5px 0px 0px;background:URL(../images/pbg.png) left top repeat-y;}
.fd30_cat ul li .cat_pbg{ padding:10px 20px 10px 20px;width:536px; margin:0px; position:relative; overflow:hidden;border-bottom:2px solid #5679BE;}
.fd30_cat ul li .cat_p dl dt a{ line-height:40px; font-size:16px; color:#3D5FA5; z-index:4; position:relative}
