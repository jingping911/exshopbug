.fd30_cat .t{width:218px;line-height:33px; height:33px;text-indent:35px; color:#fff; font-size:14px; position:relative; background:#3B5C9F; font-weight:bold; border-top:1px solid #5071B0; cursor:pointer;}
.fd30_cat .t span{ display:block; width:19px; height:20px;background:url(../images/t_span.gif) left no-repeat; position:absolute; right:13px; top:6px;} 
